<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Game.
    -->
    <changeSet id="20180722205107-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="wumpus_id"
                                 baseTableName="game"
                                 constraintName="fk_game_wumpus_id"
                                 referencedColumnNames="id"
                                 referencedTableName="wumpus"/>

        <addForeignKeyConstraint baseColumnNames="hunter_id"
                                 baseTableName="game"
                                 constraintName="fk_game_hunter_id"
                                 referencedColumnNames="id"
                                 referencedTableName="hunter"/>
                                 
        <addForeignKeyConstraint baseColumnNames="game_id"
                                 baseTableName="hunter_movements"
                                 constraintName="fk_hunter_movements_game_id"
                                 referencedColumnNames="id"
                                 referencedTableName="game"/>

    </changeSet>
</databaseChangeLog>
